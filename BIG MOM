local gui = Instance.new("ScreenGui")
gui.Parent = game.Players.LocalPlayer.PlayerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 400, 0, 200)
frame.Position = UDim2.new(0.5, -200, 0.5, -100)
frame.BackgroundColor3 = Color3.fromRGB(255, 165, 0) -- Orange background color
frame.BorderSizePixel = 0
frame.Parent = gui
frame.Active = true -- Allows the frame to capture mouse input
frame.Draggable = true

local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(1, 0, 0, 20) -- Reduced text size
textLabel.Position = UDim2.new(0, 0, 0, 0)
textLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
textLabel.Font = Enum.Font.Gotham
textLabel.TextSize = 14 -- Reduced text size
textLabel.Text = "Roblox Troll Gui by Denishrrq" -- Changed title to "Roblox Troll Gui by Denishrrq"
textLabel.Parent = frame

local line = Instance.new("Frame")
line.Size = UDim2.new(1, 0, 0, 2)
line.Position = UDim2.new(0, 0, 0, 20) -- Adjusted position to accommodate smaller text
line.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
line.BorderSizePixel = 0
line.Parent = frame

local separator = Instance.new("Frame")
separator.Size = UDim2.new(1, 0, 0, 2)
separator.Position = UDim2.new(0, 0, 1, -2)
separator.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
separator.BorderSizePixel = 0
separator.Parent = frame

local scrollingFrame = Instance.new("ScrollingFrame")
scrollingFrame.Size = UDim2.new(1, 0, 1, -24)
scrollingFrame.Position = UDim2.new(0, 0, 0, 22)
scrollingFrame.CanvasSize = UDim2.new(0, 0, 2, 0) -- Set this to accommodate more buttons if needed
scrollingFrame.BackgroundTransparency = 1
scrollingFrame.BorderSizePixel = 0
scrollingFrame.Parent = frame

local function createButton(text, positionY, onClick)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 180, 0, 30) -- Smaller button size
    button.Position = UDim2.new(0.5, -90, 0, positionY) -- Centered button with adjusted position
    button.BackgroundColor3 = Color3.fromRGB(255, 140, 0) -- Orange button color
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.GothamBold -- Bold font
    button.TextSize = 14 -- Reduced text size
    button.Text = text
    button.Parent = scrollingFrame
    button.MouseButton1Click:Connect(function()
        local originalText = button.Text
        button.Text = "Loading..."
        wait(1)
        button.Text = originalText
        onClick()
    end)
    button.BorderSizePixel = 0
    button.BackgroundTransparency = 0.2
    button.TextStrokeTransparency = 0.5
    button.AutoButtonColor = false
    return button
end

-- Original Page Buttons
local flingButton = createButton("Fling", 0, function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/ADSKerOffical/FlingPlayers/main/FlingGUI"))()
end)

local adminCommandsButton = createButton("Admin Commands", 40, function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
end)

local function createNewPage(buttonName, createButtonFunction)
    -- Hide original frame
    frame.Visible = false

    -- Create new frame for the new page
    local newFrame = Instance.new("Frame")
    newFrame.Size = UDim2.new(0, 400, 0, 200)
    newFrame.Position = UDim2.new(0.5, -200, 0.5, -100)
    newFrame.BackgroundColor3 = Color3.fromRGB(255, 165, 0)
    newFrame.BorderSizePixel = 0
    newFrame.Parent = gui
    newFrame.Active = true
    newFrame.Draggable = true

    local newLabel = Instance.new("TextLabel")
    newLabel.Size = UDim2.new(1, 0, 0, 20)
    newLabel.Position = UDim2.new(0, 0, 0, 0)
    newLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    newLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    newLabel.Font = Enum.Font.Gotham
    newLabel.TextSize = 14
    newLabel.Text = buttonName
    newLabel.Parent = newFrame

    local backButton = Instance.new("TextButton")
    backButton.Size = UDim2.new(0, 30, 0, 30)
    backButton.Position = UDim2.new(0, 5, 0, 5)
    backButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    backButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    backButton.Font = Enum.Font.GothamBold
    backButton.TextSize = 14
    backButton.Text = ">"
    backButton.Parent = newFrame
    backButton.MouseButton1Click:Connect(function()
        newFrame:Destroy()
        frame.Visible = true
    end)

    local newScrollingFrame = Instance.new("ScrollingFrame")
    newScrollingFrame.Size = UDim2.new(1, 0, 1, -24)
    newScrollingFrame.Position = UDim2.new(0, 0, 0, 22)
    newScrollingFrame.CanvasSize = UDim2.new(0, 0, 2, 0)
    newScrollingFrame.BackgroundTransparency = 1
    newScrollingFrame.BorderSizePixel = 0
    newScrollingFrame.Parent = newFrame

    -- Add buttons to the new page
    createButtonFunction(newScrollingFrame)
end

local naturalDisasterButton = createButton("Natural Disasters", 80, function()
    createNewPage("Natural Disasters", function(parentFrame)
        createButton("Natural Disaster", 0, function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/tbao143/thaibao/main/TbaoHubNaturalDisasterSurvival"))()
        end).Parent = parentFrame
    end)
end)

local mm2Button = createButton("MM2", 120, function()
    createNewPage("MM2", function(parentFrame)
        createButton("MM2 ESP", 0, function()
            loadstring(game:HttpGet("https://github.com/TheXploiterYT/scripts/raw/main/mm2chams", true))()
        end).Parent = parentFrame
    end)
end)

local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -35, 0, 5)
closeButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- Red background color
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255) -- White text color
closeButton.Font = Enum.Font.GothamBold -- Bold font
closeButton.TextSize = 14 -- Text size
closeButton.Text = "X"
closeButton.Parent = frame

-- Function to close the GUI when the X button is clicked
closeButton.MouseButton1Click:Connect(function()
    gui:Destroy()
end)
